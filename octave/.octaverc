# .octaverc


PS1(">> ")
PS2("... ")

graphics_toolkit ("gnuplot") # use gnuplot backend
setenv ("GNUTERM", "x11")

edit mode sync
edit author ssledz
edit email slawomir.sledz@gmail.com
edit home .
edit license pd

addpath("~/.octave")


suppress_verbose_help_message(1) # use concise form for help
page_screen_output(0) # write text to screen without buffering

# never dump octave-core
crash_dumps_octave_core(0)
sigterm_dumps_octave_core(0)
sighup_dumps_octave_core(0)

